@{
    ViewData["Title"] = "Create / Edit";
}
@model aspdotnet.Models.Expense
<div class="text-center">
    <h1 class="display-4">Create or edit and expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <label>Id</label>
    <input class="form-control mt-4" type="number" placeholder="0" asp-for="Id"/>

    <label>Value $</label>
    <input class="form-control mt-4" type="number" placeholder="0" asp-for="Value" step="0.01"/>

    <label>Description</label>
    <input class="form-control mt-4" type="text" placeholder="Add a description" asp-for="Desciption"/>
    
    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>